<div class="container">
  <div class="wrapper col-md-4 col-md-offset-4 col-sm-10 all">
    <h1>サインアップ</h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="field-devise">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
      </div>
      <div class= "field-sign-up">
        <%= f.label :名前 %><br />
        <%#= f.text_field :name, class: "form-control", placeholder: "名前" %>
      </div>
      <div class="field-sign-up">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
      </div>
      <div class="field-sign-up">
        <%= f.label :パスワードの確認 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "パスワードの確認" %>
      </div>
      <div class="actions">
        <%= f.submit "サインアップ", class: "btn btn-primary btn-block" %>
      </div>
      <%= link_to "戻る", new_user_session_path, class: "btn btn-default btn-sm" %>
    <% end %>
  </div>
</div>