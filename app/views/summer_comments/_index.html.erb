<div class= box24>
  <ul>
    <% comments.each do |summer_comment| %>
      <% unless summer_comment.id.nil? %>
        <p class="left-comment"><%= summer_comment.user.name %>さんがコメントしました。</p>
        <p class="left"><%= summer_comment.content %></p>
        <% if current_user.id == summer_comment.user.id %>
          <div class="right-comment">
            <%= link_to '編集', edit_summer_summer_comment_path(summer, summer_comment), class: "btn btn-default btn-sm btn-primary" %>
            <%= link_to '削除', summer_summer_comment_path(summer, summer_comment), class: "btn btn-default btn-sm btn btn-danger", method: :delete, remote: true, data: { confirm: '本当に削除してもいいですか？' } %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </ul>
</div>