<p id="notice"><%= notice %></p>
<div class="child row">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <div class="blog-text">
      <p class="left"><strong>タイトル</strong></p>
      <p class="left"><%= @winter.title %></p>
      <p class="left"><strong>内容</strong></p>
      <p class="left"><%= @winter.content %></p>
      <p class="right">
        <strong>作成時間:</strong>
        <%= @winter.created_at.strftime("%y/%m/%d %p %l:%M") %>
      </p>
    </div>
    <p>コメント一覧</p>
    <div id="comments_area">
      <%= render partial: 'winter_comments/index', locals: { comments: @comments, winter: @winter } %>
    </div>
    <%= render partial: 'winter_comments/form', locals: { comment: @comment, winter: @winter } %>
    <% if current_user.id == @winter.user_id %>
      <%= link_to '編集', edit_winter_path(@winter) %> |
    <% end %>
    <%= link_to '戻る', winter_index_path %>
  </div>
</div>