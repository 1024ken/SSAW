<div class= winter_comment>
  <ul>
    <% comments.each do |winter_comment| %>
      <% unless winter_comment.id.nil? %>
        <p class="left-comment"><%= winter_comment.user.name %>さんがコメントしました。</p>
        <p class="left"><%= winter_comment.content %></p>
        <% if current_user.id == winter_comment.user.id %>
          <div class="right-comment">
            <%= link_to '編集', edit_winter_winter_comment_path(winter, winter_comment), class: "btn btn-default btn-sm btn-primary" %>
            <%= link_to '削除', winter_winter_comment_path(winter, winter_comment), class: "btn btn-default btn-sm btn btn-danger", method: :delete, remote: true, data: { confirm: '本当に削除してもいいですか？' } %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </ul>
</div>