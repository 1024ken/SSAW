<p id="notice"><%= notice %></p>
<%= form_for(@summer, url: choose_new_or_edit_summer) do |f| %>
  <% if @summer.errors.any? %>
    <div id="error_explanation">
      <h2><%= @summer.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @summer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <br>
  <%= f.submit %>
<% end %>
<%= link_to "ブログ一覧画面にもどる", summer_index_path %>