<p id="notice"><%= notice %></p>
<%= form_for(@summer, url: choose_new_or_edit_summer(summer)) do |f| %>
  <% if @summer.errors.any? %>
    <div id="error_explanation">
      <h2><%= @summer.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @summer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :タイトル %>
  <%= f.text_field :title, class: 'form-control' %>
  <br>
  <div class="field-blog">
    <%= f.file_field :image %>
    <%= f.label :説明 %>
    <%= f.text_field :content, class: 'form-control' %>
    <br>
    <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
  </div>
<% end %>