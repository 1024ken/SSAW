<p id="notice"><%= notice %></p>
<div class="child row">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <div class="blog-text">
      <p class="left"><strong>タイトル</strong></p>
      <p class="left"><%= @summer.title %></p>
      <p class="left"><strong>内容</strong></p>
      <p class="left"><%= @summer.content %></p>
      <p class="right">
        <strong>作成時間:</strong>
        <%= @summer.created_at.strftime("%y/%m/%d %p %l:%M") %>
      </p>
    </div>
    <p>コメント一覧</p>
    <div id="comments_area">
      <%= render partial: 'summer_comments/index', locals: { comments: @comments, summer: @summer } %>
    </div>
    <%= render partial: 'summer_comments/form', locals: { comment: @comment, summer: @summer } %>
    <% if current_user.id == @summer.user_id %>
      <%= link_to '編集', edit_summer_path(@summer) %> |
    <% end %>
    <%= link_to '戻る', summer_index_path %>
  </div>
</div>