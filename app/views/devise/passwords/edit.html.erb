<div class="container-fluid password">
  <div class="col-md-4 col-md-offset-4 pass edit">
    <div class="password main">
      <h1>パスワードを変更する</h1>
    </div>
    <p>新しいパスワードを入力して下さい</p>
    <%= alert %>
    <%= form_for(resource, as: resource_name, url: password_path(resource), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>
      <div class="field">
        <%= f.label :password, "新しいパスワード" %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation, "新しいパスワードの確認" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "新しいパスワード" %>
      </div>
      <div class="actions">
        <%= f.submit "パスワードを変更する", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
    <div class="password under">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>