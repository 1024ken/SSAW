<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h3>以下の内容で、送信する。</h3>
    <%= form_for(@summer, url: summer_index_path, method: 'post') do |f| %>
      <%= f.hidden_field :title %>
      <%= f.hidden_field :content %>
      <div class="title-confirm">
        <p>タイトル:<%= @summer.title %></p>
      </div>
      <div class="image-confirm">
        <%= image_tag(@summer.image) %>
      </div>
      <%= hidden_field_tag :"cache[image]", @summer.image.cache_name %>
      <div class="content-confirm">
        <p>本文:<%= @summer.content %></p>
      </div>
      <%= f.submit "登録", class: "btn btn-primary btn-block-confirm" %>
    <% end %>
    <%= form_for(@summer, url: new_summer_path, method: 'get') do |f| %>
      <%= f.hidden_field :title %>
      <%= f.hidden_field :content %>
      <%= f.submit "戻る", name: 'back' %>
    <% end %>
  </div>
</div>