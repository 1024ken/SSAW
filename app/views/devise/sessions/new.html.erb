<body class="container-fluid">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="box">
        <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
            <div class="input-group">
              <span class="input-group-addon addon-<%= "#{provider}"%>">
                <i class="fa fa-fw fa-2x fa-<%= "#{provider}" %> fa-fw"></i>
              </span>
              <a class="btn btn-lg btn-block btn-<%= "#{provider}"%>">
                <%= link_to "#{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "btn-#{provider} btn btn-lg btn-block" %><br />
            </a>
          </div>
        <% end -%>
      <% end -%>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="divider-form"></div>
        <div class="form-group">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
        </div>
        <div class="divider-form"></div>
        <div class="form-group">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
        </div>
        <div class="divider-form"></div>
        <div class="form-group">
          <%= f.label :パスワードの確認 %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "パスワードの確認" %>
        </div>
        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
        </div>
        <div class="divider-form"></div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
</body>